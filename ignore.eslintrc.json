{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard",
      "standard-jsx",
      "standard-react",
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "quotes": ["error", "single"],
        // we want to force semicolons
        "semi": ["error", "always"],
        // we want to avoid extraneous spaces
        "no-multi-spaces": ["error"]
    }
}
